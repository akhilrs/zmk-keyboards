#include "acorn.dtsi"

&left_encoder {
    status = "okay";
    a-gpios = <&pro_micro 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
    b-gpios = <&pro_micro 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
};

&pro_micro_spi {
    cs-gpios = <&pro_micro 1 GPIO_ACTIVE_LOW>;

    nice_view: nice_view@0 {
        compatible = "nice,view";
        reg = <0>;
        spi-max-frequency = <4000000>;
        label = "DISPLAY";
        status = "okay";
    };
};

&pro_micro {
    display = &nice_view;
};
